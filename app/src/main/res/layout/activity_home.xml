<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/skin_home_op2">

    <androidx.cardview.widget.CardView
            android:layout_width="272dp"
            android:layout_height="49dp" app:cardCornerRadius="50dp" app:cardElevation="5dp"
            android:id="@+id/cardView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.496">
        <androidx.appcompat.widget.SearchView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/barraBusqueda">

        </androidx.appcompat.widget.SearchView>

    </androidx.cardview.widget.CardView>
    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" android:layout_marginEnd="216dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="353dp"
            android:layout_height="83dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/list_categorias" app:layout_constraintHorizontal_bias="0.724"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="396dp"
            android:layout_height="274dp"
            app:layout_constraintTop_toBottomOf="@+id/list_categorias" android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.8" android:id="@+id/listProductos"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.595"/>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_home_productos"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/listProductos"
            app:layout_constraintTop_toBottomOf="@+id/list_categorias" app:layout_constraintVertical_bias="0.836"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_store_products"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icon_category" android:id="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.743"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="34dp"
            android:layout_height="39dp" app:srcCompat="@drawable/icon_shopping" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/robot_android" android:id="@+id/gifAndroid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.016" android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>