<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="418dp"
            android:layout_height="63dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView" app:cardElevation="5dp"
            app:layout_constraintHorizontal_bias="0.571">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="268dp"
                android:layout_height="49dp"
                android:id="@+id/linearLayout">
            <TextView
                    android:text="Tecni Store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp" android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="131dp"
                android:layout_height="50dp"
                android:layout_marginStart="285dp">
            <ImageView
                    android:layout_width="49dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/icon_carrito_compras"
                    android:id="@+id/imageView9" android:layout_marginTop="16dp" android:contentDescription="TODO"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"/>
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/icons_settings"
                    android:id="@+id/imageView8" android:layout_marginTop="16dp" android:layout_marginStart="18dp"
                    android:contentDescription="TODO"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="281dp"
            android:layout_height="59dp" app:cardCornerRadius="50dp" app:cardElevation="5dp"
            android:id="@+id/cardView2"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"

    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="46dp"
                android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/icon_search"
                    android:id="@+id/imageView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="231dp"
                android:layout_height="match_parent" android:layout_marginStart="45dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName" android:minHeight="48dp" android:hint="Buscar"
                    android:background="@null" android:layout_marginStart="10dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Categorias"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:layout_marginTop="20dp"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Prodcutos"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/listProductos"
            app:layout_constraintTop_toBottomOf="@+id/list_categorias"/>

    <TextView
            android:id="@+id/ver_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Mas"
            android:textColor="#448AFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_categorias"
            app:layout_constraintBottom_toTopOf="@+id/listProductos" android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.536" tools:ignore="UnknownId"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="420dp"
            android:layout_height="194dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/list_categorias"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="420dp"
            android:layout_height="198dp"
            app:layout_constraintTop_toBottomOf="@+id/list_categorias" android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:id="@+id/listProductos"/>




</androidx.constraintlayout.widget.ConstraintLayout>