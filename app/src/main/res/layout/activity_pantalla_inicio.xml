<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home" android:background="@drawable/skin_login">
    <ImageView
            android:layout_width="370dp"
            android:layout_height="305dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/gifView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.487"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="345dp"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@+id/gifView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.508" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.724">
        <Button
                android:text="@string/titulo_btn_sign_in"
                android:layout_width="230dp"
                android:layout_height="70dp" android:id="@+id/btn_sign_in" android:layout_marginStart="53dp"
                android:layout_marginTop="30dp" android:textSize="24sp" android:fontFamily="sans-serif-medium"
                app:cornerRadius="50dp" android:backgroundTint="@color/sign_in_color"/>
        <Button
                android:text="@string/titulo_btn_sign_up"
                android:layout_width="230dp"
                android:layout_height="70dp" android:id="@+id/btn_sign_up" android:layout_marginStart="53dp"
                android:layout_marginTop="15dp" android:textSize="24sp" android:fontFamily="sans-serif-medium"
                app:cornerRadius="50dp" android:backgroundTint="@color/sign_up_color"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>